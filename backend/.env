# Backend environment
NODE_ENV=development
PORT=8080

# MySQL
DB_HOST=mysql
DB_PORT=3306
DB_NAME=repair_center
DB_USER=appuser
DB_PASS=appsecret

# Auth
JWT_SECRET=supersecretjwtkey
JWT_EXPIRES=15m
REFRESH_SECRET=supersecretrefreshkey
REFRESH_EXPIRES=7d

CORS_ORIGIN=http://localhost:5173

# Frontend serving
# Leave SERVE_FRONTEND=true to have the API deliver the compiled UI when dist assets are present.
SERVE_FRONTEND=true
# Override only if the frontend build output lives outside the default ../frontend/dist directory.
# FRONTEND_DIST_PATH=../frontend/dist
